doctype
html(lang="en")
	head
		title
			| Homepage
			= " | "
			= title
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

		// FONT CSS                
		link(type="text/css", rel="stylesheet", href="assets/font/font-icon/font-awesome/css/font-awesome.css")
		link(type="text/css", rel="stylesheet",href="https://fonts.googleapis.com/css?family=Roboto")

		// LIBRARY CSS
		link(type="text/css", rel="stylesheet", href="assets/libs/bootstrap/css/bootstrap.min.css")
		link(type="text/css", rel='stylesheet', href='assets/libs/slick-slider/slick.css')
		link(type="text/css", rel='stylesheet', href='assets/libs/slick-slider/slick-theme.css')
		link(type="text/css", rel='stylesheet', href='assets/libs/custom-scroll/jquery.mCustomScrollbar.min.css')
		
		// STYLE CSS
		link(type="text/css", rel='stylesheet', href='assets/css/layout.css')
		link(type="text/css", rel='stylesheet', href='assets/css/components.css')
		link(type="text/css", rel='stylesheet', href='assets/css/block.css')
		link(type="text/css", rel='stylesheet', href='assets/css/responsive.css')
	
		for page, key in public._data
			if(current.source == key)
				for css in page.url_style
					if(css.src != undefined)
						link(type="text/css", rel="stylesheet", href="#{css.src}")
	body
		//BEGIN PAGE LOADER
		.body-wrapper
			if (current.source == "homepage-food" || current.source == "food-detail")
				!= partial("_includes/body-food")
			// WRAPPER CONTENT
			.wrapper-content
				// HEADER
				header
					if (current.source == "index")
						!= partial("_includes/header/header-default")
					else
						!= partial("_includes/header/header-default")
				// MAIN CONTENT
				.main-content
					!= yield
				// FOOTER
				footer
					if (current.source == "index")
						!= partial("_includes/footer/footer-default")
					else
						!= partial("_includes/footer/footer-default")

				//- // BUTTON BACK TO TOP
				//- .btn-wrapper.back-to-top
				//- 	a.btn.btn-transparent(href="")
				//- 		i.fa.fa-angle-up

		// LIBRARY JS
		script(src="assets/libs/jquery/jquery-3.1.1.min.js")
		script(src="assets/libs/bootstrap/js/bootstrap.min.js")
		script(src="assets/libs/slick-slider/slick.min.js")
		script(src="assets/libs/directional-hover/jquery.directional-hover.js")
		script(src="assets/libs/custom-scroll/jquery.mCustomScrollbar.concat.min.js")
		script(src='https://apis.google.com/js/platform.js', async='', defer='')
			
		// MAIN JS
		script(src="assets/js/main.js")  

		// LOADING SCRIPTS FOR PAGE
		for page, key in public._data
			if(current.source == key)
				for js in page.url_script
					if(js.src != undefined)
						script(src='#{js.src}')
